      <WorkToMake>1</WorkToMake>
      <Mass>0</Mass>
    </statBases>
    <equippedAngleOffset>0</equippedAngleOffset>
    <burnableByRecipe>false</burnableByRecipe>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
   
    <tools>
      <li>
        <label>inactive</label>
        <capacities>
          <li>Blunt</li>
