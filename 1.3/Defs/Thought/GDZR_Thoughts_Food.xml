      </li>
    </stages>
</ThoughtDef>
  
  
<!--■■■6. ATE RAW BIOMATERIAL■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_AteRawFood</defName>
  
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
  
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate raw biomaterial</label>
