<ThoughtDef>
    <defName>GDZR_THOUGHT_AteKibble</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate kibble</label>
        <description>I ate biomaterial designed for lower, hardier, lifeforms. My digestive system will have a hard time processing this.</description>
