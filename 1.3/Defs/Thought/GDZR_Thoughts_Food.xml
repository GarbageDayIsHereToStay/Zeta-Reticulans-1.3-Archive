</ThoughtDef>

<!--■■■6. ATE ROTTEN BIOMATERIAL■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_AteRottenFood</defName>
  
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
  
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate rotten biomaterial</label>
        <description>I ate some decaying, putrid biomaterial. My digestive system can't handle this.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>

<!--■■■7. NEED FOOD■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_NeedFood</defName>
  
    <workerClass>ThoughtWorker_NeedFood</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>hungry</label>
        <description>I require nourishment.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>ravenously hungry</label>
        <description>My dietary needs are not being met. This will effect my work soon.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>malnourished</label>
        <description>A long time has passed since my last nourishment. My work is suffering and my body is starting to lose mass.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>badly malnourished</label>
        <description>My body is wasting away. It's difficult to focus on my tasks.</description>
        <baseMoodEffect>-16</baseMoodEffect>
      </li>
      <li>
        <label>starving</label>
        <description>It's almost impossible to concentrate. My limbs are hard to move. I am in pain.</description>
        <baseMoodEffect>-22</baseMoodEffect>
      </li>
      <li>
        <label>advanced starvation</label>
        <description>I can barely move or think. Losing consciousness is a risk. The pain is severe.</description>
        <baseMoodEffect>-28</baseMoodEffect>
      </li>
      <li>
        <label>extreme starvation</label>
        <description>Sustenance... anything... </description>
        <baseMoodEffect>-34</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>
  
</Defs>
