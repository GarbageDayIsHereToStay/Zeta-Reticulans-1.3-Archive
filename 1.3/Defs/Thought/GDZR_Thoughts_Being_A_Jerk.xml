<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
 <!--■■■■■■■■■■■■■■■■■
     BEING A JERK
  1. bio-asset inspected (Pawn) aka "ButcheredHumanlikeCorpse"
  2. bio-asset inspected (Colony) aka "KnowButcheredHumanlikeCorpse"
  3. Biomaterial Extracted (Guest) aka "KnowGuestOrganHarvested'
  4. Biomaterial Extracted (Colonist) aka "KnowColonistOrganHarvested"
  5. Bio-asset Released aka "ReleasedHealthyPrisoner"
  6  Bio-asset Sold aka "KnowPrisonerSold"
     ■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■BEING A JERK■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->   
  
<!--■■■1. bio-asset inspected (PAWN)■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_ButcheredHumanlikeCorpse</defName>

    <icon>Icons/ZR_MeatKnowledge</icon>
    <showBubble>true</showBubble>
  
    <durationDays>2</durationDays>
    <stackLimit>100</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>bio-asset inspected (Unsupported, report the corpse) </label>
        <description>A bio-asset's physical attributes have been recorded for use in demographic analysis.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>
  
<!--■■■2. bio-asset inspected (COLONY)■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_KnowButcheredHumanlikeCorpse</defName>
  
    <icon>Icons/ZR_MeatKnowledge</icon>
    <showBubble>true</showBubble>
  
    <durationDays>2</durationDays>
    <stackLimit>100</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>bio-asset inspected (Unsupported, report the corpse)</label>
        <description>A bio-asset's physical attributes have been recorded for use in demographic analysis.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>

<!--■■■3. BIOMATERIAL EXTRACTED ■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_KnowOrganHarvested</defName>
  
    <icon>Icons/ZR_OrganKnowledge</icon>
    <showBubble>true</showBubble>
  
    <durationDays>2</durationDays>
    <stackLimit>100</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>biomaterial extracted</label>
        <description>The co-op harvested material from a live bio-asset. This aids in our research.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>
  
<!--■■■5. BIO-ASSET RELEASED■■■-->
  
<ThoughtDef>
    <defName>GDZR_THOUGHT_ReleasedHealthyPrisoner</defName>
  
    <icon>Icons/ZR_WastedAssets</icon>
    <showBubble>true</showBubble>
  
    <durationDays>8</durationDays>
    <stackLimit>100</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>bio-asset released</label>
        <description>We released an unprocessed bio-asset. What a waste of material.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>

<!--■■■6. BIO-ASSET SOLD■■■-->
<ThoughtDef>
    <defName>GDZR_THOUGHT_KnowPrisonerSold</defName>
    <durationDays>2</durationDays>
    <stackLimit>100</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>bio-asset sold</label>
        <description>A bio-asset has been sold off. The resources gained will serve the co-op in its goals.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
</ThoughtDef>
  
</Defs>
