          <xpath>*/ScenarioDef[defName="ZR_SCENARIO_DEF"]/scenario/parts/li[4][@Class="ScenPart_StartingThing_Defined"]</xpath>
        </li>
        
        <li Class="PatchOperationAdd">
          <xpath>*/ScenarioDef[defName="ZR_SCENARIO_DEF"]/scenario/parts</xpath>
          <value>
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>VMEu_Concrete</thingDef>
              <count>450</count>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>*/ScenarioDef[defName="ZR_SCENARIO_DEF"]/scenario/parts</xpath>
          <value>
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
