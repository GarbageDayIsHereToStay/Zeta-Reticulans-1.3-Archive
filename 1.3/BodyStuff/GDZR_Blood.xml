    <label>blood</label>
    <graphicData>
      <texPath>Things/Filth/Spatter</texPath>
      <color>(114, 47, 55)</color>
    </graphicData>
    <statBases>
      <Beauty>-30</Beauty>
      <Cleanliness>-10</Cleanliness>
    </statBases>
    <filth>
      <rainWashes>true</rainWashes>
