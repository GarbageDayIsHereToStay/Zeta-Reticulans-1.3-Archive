<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--■■■■■■■■■■■■■■■■■
        Blood
    1) Zeta Reticulan (Base)
    2) Hybrid Red/Grey Blood (Base; for generic red blood races)
    3) Forsaken
    4) Mantis
    5) Moyo
    ■■■■■■■■■■■■■■■■■■ 1) Blood, Zeta Reticulan ■■■■■■■■■■■■■■■■■■■■■■■-->
     <ThingDef ParentName="BaseFilth">
    <defName>GDZR_FILTH_BloodZeta</defName>
    <label>blood</label>
    <statBases>
      <Beauty>-30</Beauty>
      <Cleanliness>-10</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/Spatter</texPath>
      <color>(52, 52, 52)</color>
    </graphicData>
    <filth>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>90</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
    </filth>
  </ThingDef> 
  
  <!--■■■■■■■■■■■■■■■■■■ 2) Blood, Hybrid Red/Grey ■■■■■■■■■■■■■■■■■■■■■■■-->
